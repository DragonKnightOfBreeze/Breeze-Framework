root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.{java, cs, kt, kts, groovy, lua, sql, md}]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false
